@model IEnumerable<JournalKIT.Schedule>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h2 class="text-center mt-4">Расписание</h2>
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card-deck">
                <div class="card mb-4">
                    <div class="card-header bg-light text-center">
                        <h5>ВСЁ</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            @foreach (var item in Model)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="font-weight-bold">
                                            @Html.DisplayFor(modelItem => item.Timelessons.Startlessons) - @Html.DisplayFor(modelItem => item.Timelessons.Endlessons)
                                        </span>
                                        <span class="text-muted"> @Html.DisplayFor(modelItem => item.Lessons.Namelessons)</span>
                                    </div>
                                    <span class="text-muted">@Html.DisplayFor(modelItem => item.Tutor.Nametutor)</span>
                                </li>                             
                             
                            }


                        </ul>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>