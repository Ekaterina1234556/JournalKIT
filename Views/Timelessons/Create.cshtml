@model JournalKIT.Timelesson

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Numberlessons" class="control-label">Номер</label>
                <input asp-for="Numberlessons" class="form-control" />
                <span asp-validation-for="Numberlessons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Startlessons" class="control-label">Начало</label>
                <input type="time" asp-for="Startlessons" class="form-control" />
                <span asp-validation-for="Startlessons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endlessons" class="control-label">Конец</label>
                <input type="time" asp-for="Endlessons" class="form-control" />
                <span asp-validation-for="Endlessons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к таблице</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
